                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>optimize</id>
                                <phase>compile</phase>
                                <configuration>
                                    <target name="-optimize" description="Combine and minify files.">
                                        <echo message="Running optimize."/>

                                        <property name="requirejs.dir" value="${basedir}/src/main/requirejs"/>

                                        <java classname="org.mozilla.javascript.tools.shell.Main" failonerror="true">
                                            <classpath>
                                                <pathelement location="${requirejs.dir}/lib/rhino/js.jar"/>
                                            </classpath>
                                            <arg value="${requirejs.dir}/dist/r.js"/>
                                            <arg value="-o"/>
                                            <arg value="${requirejs.dir}/app.build.js"/>
                                        </java>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>copy</id>
                                <phase>compile</phase>
                                <configuration>
                                    <target>
                                        <mkdir dir="${webappDirectory}/style"/>
                                        <copy file="${basedir}/src/main/webapp/index_prod.jsp"
                                              tofile="${webappDirectory}/index.jsp"/>
                                        <copy file="${basedir}/src/main/webapp/js/lib/require.js"
                                              tofile="${webappDirectory}/require.js"/>
                                        <copy file="${project.build.directory}/require-web-1.0/scripts/js/main.js"
                                              tofile="${webappDirectory}/main.js"/>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>copy-war-to-deploy-folder</id>
                                <phase>install</phase>
                                <configuration>
                                    <target>
                                        <copy file="${project.build.directory}/${rss-feed-war}.war"
                                              tofile="${project.build.directory}/../deploy/${rss-feed-war}-${timestamp}.war"/>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-classpath</argument>
                                        <!-- automatically creates the classpath using all project dependencies, also adding the project build directory -->
                                        <classpath/>
                                        <argument>com.asual.lesscss.LessEngineCli</argument>
                                        <argument>${project.basedir}/src/main/webapp/style/style.less</argument>
                                        <argument>${webappDirectory}/style/style.css</argument>
                                        <argument>-compress</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <version>2.1.1</version>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exploded</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <archive>
                                <manifestEntries>
                                    <media-rss-version>${project.version}</media-rss-version>
                                </manifestEntries>
                            </archive>
                            <webappDirectory>${webappDirectory}</webappDirectory>
                            <warSourceExcludes>js/**,style/*.less,index_*.jsp</warSourceExcludes>
                            <packagingExcludes>WEB-INF/web.xml,WEB-INF/lib/rhino-*.jar</packagingExcludes>
                        </configuration>
                    </plugin>
            </plugins>
