    <profiles>
        <profile>
            <id>package-war</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>optimize</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target name="-optimize" description="Combine and minify files.">
                                        <echo message="Running optimize."/>

                                        <property name="requirejs.dir" value="${basedir}/src/main/requirejs"/>

                                        <java classname="org.mozilla.javascript.tools.shell.Main" failonerror="true">
                                            <classpath>
                                                <pathelement location="${requirejs.dir}/lib/rhino/js.jar"/>
                                            </classpath>
                                            <arg value="${requirejs.dir}/dist/r.js"/>
                                            <arg value="-o"/>
                                            <arg value="${requirejs.dir}/app.build.js"/>
                                        </java>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy</id>
                                <phase>compile</phase>
                                <configuration>
                                    <target>
                                        <mkdir dir="${webappDirectory}/style"/>
                                        <copy file="${basedir}/src/main/webapp/jsp/prefix_prod.jsp"
                                              tofile="${webappDirectory}/jsp/prefix.jsp"/>
                                        <copy file="${basedir}/src/main/webapp/jsp/suffix_prod.jsp"
                                              tofile="${webappDirectory}/jsp/suffix.jsp"/>
                                        <copy file="${basedir}/src/main/webapp/jsp/main_prod.jsp"
                                              tofile="${webappDirectory}/jsp/main.jsp"/>
                                        <copy file="${basedir}/src/main/webapp/js/lib/require.js"
                                              tofile="${webappDirectory}/require.js"/>
                                        <copy file="${project.build.directory}/require-web-1.0/scripts/js/main.js"
                                              tofile="${webappDirectory}/main.js"/>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>compile-login-less</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-classpath</argument>
                                        <classpath/>
                                        <argument>com.asual.lesscss.LessEngineCli</argument>
                                        <argument>${project.basedir}/src/main/webapp/style/login-manifest.less
                                        </argument>
                                        <argument>${webappDirectory}/style/login.css</argument>
                                        <argument>-compress</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>compile-main-less</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <arguments>
                                        <argument>-classpath</argument>
                                        <classpath/>
                                        <argument>com.asual.lesscss.LessEngineCli</argument>
                                        <argument>${project.basedir}/src/main/webapp/style/main-manifest.less</argument>
                                        <argument>${webappDirectory}/style/main.css</argument>
                                        <argument>-compress</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exploded</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <archive>
                                <manifestEntries>
                                    <media-rss-version>${project.version}</media-rss-version>
                                </manifestEntries>
                            </archive>
                            <webappDirectory>${webappDirectory}</webappDirectory>
                            <packagingExcludes>
                                js/components/**,
                                js/controllers/**,
                                js/features/**,
                                js/routers/**,
                                js/utils/**,
                                style/**/*.less,
                                style/3rd-party,
                                node_modules,
                                *_*.jsp,
                            </packagingExcludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>deploy</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.goldin</groupId>
                        <artifactId>copy-maven-plugin</artifactId>
                        <version>0.2.5</version>
                        <executions>
                            <execution>
                                <id>deploy-archive</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <resources>
                                        <resource>
                                            <targetPath>
                                                scp://${prod.username}:${prod.password}@${prod.server}:/home/mediarss
                                            </targetPath>
                                            <file>${project.build.directory}/${rss-feed-war}.war</file>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.github.goldin</groupId>
                        <artifactId>sshexec-maven-plugin</artifactId>
                        <version>0.2.5</version>
                        <executions>
                            <execution>
                                <id>unpack-archive</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>sshexec</goal>
                                </goals>
                                <configuration>
                                    <location>scp://${prod.username}:${prod.password}@${prod.server}:/home/mediarss
                                    </location>
                                    <!-- backup existing war -->
                                    <!-- set maintenance mode on -->
                                    <!-- stop tomcat -->
                                    <!-- delete old war file -->
                                    <!-- copy new war file -->
                                    <!-- start tomcat -->
                                    <!-- wait for 200 seconds to let tomcat startup -->
                                    <!-- set maintenance mode off -->
                                    <!--
                                    old:
                                    cp -f webapps/media-rss.war backups/;./maintenance.sh start;
                                        ./tomcat stop;sleep 10;rm -rf webapps/media-rss*;cp media-rss.war webapps/;
                                        ./t.sh;sleep 200;./maintenance.sh stop
                                    -->
                                    <command>
                                        cp -f webapps/ROOT.war backups/;./maintenance.sh start;
                                        sudo service tomcat7 stop;sleep 10;sudo rm -rf webapps/*;
                                        sudo cp media-rss.war webapps/ROOT.war;sudo service tomcat7 start;
                                        sleep 10;./maintenance.sh stop
                                    </command>
                                    <!--<command>-->
                                    <!--cp -f webapps/ROOT.war backups/;sudo service tomcat7 stop;sleep 10;-->
                                    <!--sudo rm -rf webapps/*;-->
                                    <!--sudo cp media-rss.war webapps/ROOT.war;sudo service tomcat7 start;-->
                                    <!--</command>-->
                                    <echoCommands>true</echoCommands>
                                    <verbose>true</verbose>
                                    <echoPwd>true</echoPwd>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

